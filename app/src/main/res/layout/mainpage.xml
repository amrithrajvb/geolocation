<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/locc"
    tools:context="com.example.bet.geolocation.mainpageActivity">

    <ImageView
        android:id="@+id/imageButton4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="15dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/cnctnptr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageButton4"
        android:layout_centerHorizontal="true"
        android:text="GEO LOC"
        android:textColor="#00ffff"
        android:textSize="25dp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/cambutton"
        android:layout_width="50dp"
        android:layout_height="50dp"

        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/imageButton4"
        android:background="@drawable/rr3" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <ImageButton
            android:id="@+id/LOCATNbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@+id/imageButton4"
            android:layout_marginTop="180dp"
            android:layout_toStartOf="@+id/cnctnptr"

            android:background="@drawable/loc2"
            android:padding="15dp" />

        <ImageButton
            android:id="@+id/ALRTbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignBottom="@+id/LOCATNbutton"
            android:layout_below="@+id/imageButton4"
            android:layout_marginTop="180dp"
            android:layout_marginLeft="10dp"

            android:background="@drawable/all"
            android:padding="20dp" />
        <ImageButton
            android:id="@+id/meetingbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignBottom="@+id/LOCATNbutton"
            android:layout_below="@+id/imageButton4"
            android:layout_marginTop="180dp"
            android:layout_marginLeft="10dp"

            android:background="@drawable/meet"
            android:padding="15dp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOCATION"
        android:textColor="#000"
        android:textSize="17dp"
        android:textStyle="bold"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ALERT MESSAGE"
        android:textColor="#000"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="150dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="290dp"
        android:layout_marginTop="140dp"
        android:text="MEETING PLACE"
        android:textColor="#000"
        android:textSize="17dp"
        android:textStyle="bold" />
</RelativeLayout>
