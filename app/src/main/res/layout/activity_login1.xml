<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/aa"
    tools:context="com.example.bet.geolocation.login1Activity">
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="66dp"
        android:padding="20dp"
        android:text="Welcome back! what's your phone number?"
        android:textColor="#000"
        android:textColorHighlight="#2f4f4f"
        android:textSize="30dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/lgnmbr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView3"
        android:layout_below="@+id/textView3"
        android:layout_marginStart="24dp"
        android:ems="8"
        android:hint="number"
        android:inputType="textPersonName"
        android:padding="30dp"
        android:textSize="30dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/log1next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentEnd="true"
        android:layout_below="@+id/lgnmbr"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="66dp"
        android:background="@drawable/button_bg_round"
        android:backgroundTint="#00ffff"
        android:text="next" />




</RelativeLayout>
